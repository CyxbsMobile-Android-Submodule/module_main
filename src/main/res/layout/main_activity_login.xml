<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBackground"
    tools:context=".ui.LoginActivity">


    <TextView
        android:id="@+id/main_textview2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="start"
        android:text="你好！"
        android:textColor="@color/levelTwoFontColor"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/main_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎来到掌上重邮"
        android:textColor="@color/levelTwoFontColor"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/main_textview2"
        app:layout_constraintTop_toBottomOf="@+id/main_textview2"
        app:layout_constraintVertical_bias="0.013" />


    <ImageView
        android:id="@+id/main_imageview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:src="@drawable/main_ic_student_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/main_textview"
        app:layout_constraintTop_toBottomOf="@+id/main_textview"
        app:layout_constraintVertical_bias="0.06999999" />


    <ImageView
        android:id="@+id/main_imageview8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_ic_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_imageview2"
        app:layout_constraintStart_toStartOf="@+id/main_imageview2"
        app:layout_constraintTop_toTopOf="@+id/et_password"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:drawablePadding="16dp"
        android:hint="@string/main_activity_login_account_hint"
        android:inputType="number"
        android:maxLength="10"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="@color/main_activity_login_et_edited_color"
        android:textColorHint="@color/main_activity_login_et_hint_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_imageview2"
        app:layout_constraintTop_toTopOf="@+id/main_imageview2"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:drawablePadding="16dp"
        android:hint="@string/main_activity_login_password_hint"
        android:imeOptions="actionSend"
        android:inputType="textPassword"
        android:maxLength="6"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="@color/main_activity_login_et_edited_color"
        android:textColorHint="@color/main_activity_login_et_hint_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_account"
        app:layout_constraintStart_toStartOf="@+id/et_account"
        app:layout_constraintTop_toBottomOf="@+id/et_account"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/common_toolbar_background"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/main_activity_login_btn_login"
        android:textColor="@color/main_activity_login_btn_login_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintVertical_bias="0.047" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_login_check"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_user_agreement"
        app:layout_constraintEnd_toStartOf="@+id/main_user_agreement"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_user_agreement"
        app:lottie_progress="0.39"
        app:lottie_rawRes="@raw/lottie_check_login" />

    <TextView
        android:id="@+id/main_user_agreement"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="@string/main_user_agreement"
        android:textColor="@color/logInToTheGrayFontBelow"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintVertical_bias="0.886" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/login_loging"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
